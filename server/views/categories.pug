extends _layout.pug
include mixins.pug
block styles
    link(rel="stylesheet" href="/static/css/news.css")

block main-content
    .row
        .col-md-10
            h1
            | This is category : #{foundCategory.name}
            if foundCategory.articles.length > 0
                ul.list-unstyled
                    each article in foundCategory.articles
                        li
                            a(href="/" + foundCategory.type + "/" + article._id)= article.title