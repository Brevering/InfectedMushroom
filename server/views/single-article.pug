extends _layout.pug

block styles
    link(rel="stylesheet" href="/static/css/article.css")

block main-content
    #article-item.row.content-item
        .col-sm-10.article
            h2 #{title}
            ul.article-detail.list-unstyled.list-inline
                li
                    span.glyphicon.glyphicon-calendar
                    | #{createdAt.getDate()}/#{createdAt.getMonth()}/#{createdAt.getFullYear()}
                li
                    span.glyphicon.glyphicon-time
                    | #{createdAt.getHours()} : #{createdAt.getMinutes()}
                li
                    span.glyphicon.glyphicon-user
                    | #{author.username}
                li
                    span.glyphicon.glyphicon-commen
                    | 124 Comments
            p
                img.img-responsive.pull-left(src=imgLink, alt='')
                | #{body}
            ul.article-tags.list-unstyled.list-inline
                //- each tag in tags
                //- li
                //-     a(href='#')
                //-         i.glyphicon.glyphicon-tag
                //-         | #{tag}
        .col-sm-2
            .sidebar
                .box.categories
                    ul.list-unstyled
                        li
                            a.btn.btn-default.btn-block(href='#' role="button") Edit
                            a.btn.btn-default.btn-block(href='#') Subscribe
                            
