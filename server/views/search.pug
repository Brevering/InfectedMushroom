extends _layout.pug
include mixins.pug
block styles
    link(rel="stylesheet" href="/static/css/news.css")

block main-content
    .row
        .col-md-10
            each article in model.news
                +article-generator(article, "./news")
            each article in model.guides
                +article-generator(article, "./guides")
            each article in model.reviews
                +article-generator(article, "./reviews")
            +paging-generator(pagesCount)